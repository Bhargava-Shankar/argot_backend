generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Vault{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  vaultName String @unique
  vaultDescription String
  Word VaultWords[]
}

model VaultWords {
  is String @id @default(auto()) @map("_id") @db.ObjectId
  wordId String @db.ObjectId
  words Word @relation(fields: [wordId], references: [id])
  vaultId String @db.ObjectId
  vaults Vault @relation(fields: [vaultId], references: [id])
  
}

model Word{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  wordName String 
  partOfSpeech String
  definition String
  customDefinition String @default("")
  example String @default("")
  Vault VaultWords[]
  
  @@unique( name:"uniqueWordComb", [wordName,partOfSpeech,definition])
}
