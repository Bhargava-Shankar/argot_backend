generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Vault{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  vaultName String @unique
  vaultDescription String
  wordIDs String[] @db.ObjectId
  words Word[] @relation(fields: [wordIDs], references: [id])
}

model Word{
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  wordName String 
  partOfSpeech String
  definition String
  customDefinition String @default("")
  example String @default("")
  vaultIDs String[] @db.ObjectId
  vaults Vault[] @relation(fields: [vaultIDs], references: [id])

  @@unique( name:"uniqueWordComb", [wordName,partOfSpeech,definition])
}
